---
import HeaderNav from '@components/partials/header/HeaderNav.astro'
import HeaderBrand from '@components/partials/header/HeaderBrand.astro'
import Wave from '@components/partials/header/Wave.astro'
import Cover from '@components/partials/header/Cover.astro';

interface Props {
  title: string
}

const { title } = Astro.props;
---
<header id="header" itemscope itemtype="http://schema.org/WPHeader">
  <div class="inner">
    <HeaderBrand title={title} />
    <HeaderNav />
  </div>
  <Cover />
</header>
<Wave />

<style lang="stylus" scoped>
  #header {
    margin: 0 auto;
    position: relative;
    width: 100%;
    height: 50vh;
    text-shadow: 0 .2rem .3rem alpha(#000, .5);
    color: var(--header-text-color);

    :global(a:hover) {
      color: currentColor;
    }
  }
</style>